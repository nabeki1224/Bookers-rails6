<div class="container">
  <div class="row">
    <div class="col-md-3">
        <%= render "layouts/profile", user: current_user, book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <th><%= image_tag user.image, size: "20x20" %></th>
              <th><%= user.name %></th>
              <th><%= link_to "Show", user_path(user) %></th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>